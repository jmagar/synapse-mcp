{
  "name": "homelab-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for managing homelab Docker infrastructure across multiple hosts",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:bench": "vitest run src/schemas/unified.bench.test.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "keywords": [
    "mcp",
    "homelab",
    "docker",
    "infrastructure"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "dockerode": "^4.0.4",
    "express": "^4.21.0",
    "express-rate-limit": "^8.2.1",
    "node-ssh": "^13.2.1",
    "zod": "^3.24.0",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/dockerode": "^3.3.34",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "@types/ssh2": "^1.15.1",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  }
}
